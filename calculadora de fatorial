<br><hr><center>
<script>
    <div class="container">
var n = Number(prompt("Informe um valor:"));
var fator = 1;
var x = n;
while (x > 0){
	fator = fator * x;
	x --;
}
document.write( `Fatorial de <span style= "color:red;font-size:30px;">${n}</span> Ã©: <br><br><br>` +  `<span style="color:blue;font-size:60px">${fator}</span>`);
</div></script></center>
